<div class="row">
  <div class="col-md-3">
    <%= display_user_image(@user, "profile_picture.image.thumb.url", width: "180px") %>
  </div>
<div class="col-md-9">
<table class="table table-condensed table-hover table-striped mt-20">
  <thead>
    <tr>
      <th>Attribute</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= @current_user.name %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= @current_user.email %></td>
    </tr>
    <tr>
      <td>Username</td>
      <td><%= @current_user.username %></td>
    </tr>
    <tr>
      <td>Phone</td>
      <td><%= @current_user.phone %></td>
    </tr>
    <tr>
      <td>Skype Id</td>
      <td><%= @current_user.skype %></td>
    </tr>
    <tr>
      <td>Linkedin</td>
      <td><%= @current_user.linkedin %></td>
    </tr>
    <tr>
      <td>City</td>
      <td><%= @current_user.city %></td>
    </tr>
    <tr>
      <td>State</td>
      <td><%= @current_user.state %></td>
    </tr>
    <tr>
      <td>Country</td>
      <td><%= @current_user.country %></td>
    </tr>
    <tr>
      <td>Designation</td>
      <td><%= @current_user.designation.title if @current_user.designation %></td>
    </tr>
    <tr>
      <td>Department</td>
      <td><%= @current_user.department.name if @current_user.department %></td>
    </tr>
  </tbody>
</table>
</div>
</div>