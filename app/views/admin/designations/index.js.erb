<% if @designations.any? %>
	// Fill the right box with first designation details in the list
	$('#div_designation_details').html("<%= escape_javascript(render(:partial=>'show')) %>");
  initPopovers();

	// Rendering the item list
	$('#div_designation_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
	$('#div_designation_drop_down').html("<%= escape_javascript(theme_drop_down(@designations, :title)) %>");
<% else %>
	var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
	$('#div_designation_index').html(noResultsText);
	$('#div_designation_details').html(noResultsText);
<% end %>